<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javase.mybatis.dao.UserDao">
    <resultMap type="com.javase.mybatis.entity.User" id="usermap">
        <id column="id" property="id"/>
        <result column="name" property="username"/>
        <result column="age" property="age"/>
    </resultMap>
    
    <resultMap id="resultUserArticleList" type="com.javase.mybatis.entity.Article">
        <id column="id" property="id" />
        <result column="title" property="title"/>
        <result column="content" property="content"/>

        <association property="user" javaType="com.javase.mybatis.entity.User">
            <id column="id" property="id"/>
            <result column="name" property="username"/>
            <result column="age" property="age"/>
        </association>
    </resultMap>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id" parameterType="com.javase.mybatis.entity.User">
        insert into User(id, name, age)
        values(#{id}, #{username}, #{age})
    </insert>
    <delete id="deleteUser" >
        delete from user where id = #{id}
    </delete>
    <update id="updateUser" parameterType="com.javase.mybatis.entity.User">
        update user set name = #{username},
        age = #{age} where id = #{id}
    </update>
    <select id="selectUser"  resultMap="usermap">
        select * from user where id = #{id}
    </select>
    <select id="selectUsers" parameterType="String" resultMap="usermap">
        select * from user where name like #{username}
    </select>


    <select id="getUserArticles" parameterType="int" resultMap="resultUserArticleList">
        select user.id, user.name, user.age, article.id aid, article.title, article.content
        from user, article
        where user.id = article.userid and user.id = #{id};
    </select>


</mapper>